<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/details_content">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/details_cv_movie_image"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />


    <TextView
        android:id="@+id/details_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/details_cv_movie_image"
        android:maxLines="2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.507"
        android:gravity="left"/>

    <TextView
        android:id="@+id/details_tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/details_tv_title"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/details_cv_movie_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.475"
        android:gravity="left"/>

    <TextView
        android:id="@+id/details_tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/details_tv_release_date"
        app:layout_constraintLeft_toRightOf="@+id/details_cv_movie_image"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.475" />

    <TextView
        android:id="@+id/details_tv_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/details_tv_duration"
        app:layout_constraintLeft_toRightOf="@+id/details_cv_movie_image"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.475" />

</android.support.constraint.ConstraintLayout>